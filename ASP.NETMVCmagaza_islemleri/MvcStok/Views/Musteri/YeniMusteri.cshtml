@model MvcStok.Models.Entity.TBLMUSTERILER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Musteri Adi </label>
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:blue" })
    </div>
    <div>
        <label>Musteri Soyadi </label>
        <input type="text" class="form-control" name="MUSTERISOYAD" />
    </div>

    <div>
        <button class="btn btn-primary" style="margin-top:15px;" id="btn1">Musteri Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('MUSTERI EKLEME ISLEMI YAPILDI...');
        });
    </script>
</form>
