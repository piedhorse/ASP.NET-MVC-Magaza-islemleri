@using MvcStok.Models.Entity
@Model List<TBLMUSTERILER>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_MainLayout.cshtml";
    }


    @using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
    {
               <p>
                  <b>Aranacak Musteri Adi :@Html.TextBox("p")</b>
                   <input type="submit"  value="Ara" />
               </p>
    }


    <table class="table table-bordered">

        <tr>

            <th>MUSTERI-ID</th>
            <th>MUSTERI-ADI</th>
            <th>MUSTERI-SOYADI</th>
            <th>SIL</th>
            <th>Guncelle</th>
            <th>Alert</th>

        </tr>
        <tbody>
            @foreach (var mus in Model)
            {
                <tr>

                    <td>@mus.MUSTERRIID</td>
                    <td>@mus.MUSTERIAD</td>
                    <td>@mus.MUSTERISOYAD</td>
                    <td> <a href="/Musteri/Sil/@mus.MUSTERRIID" class="btn btn-danger">Sil</a></td>
                    <td> <a href="/Musteri/MusteriGetir/@mus.MUSTERRIID" class="btn btn-success">Guncelle</a></td>
                    <td>@Html.ActionLink("SIL BUTONU","SIL" , new { id=mus.MUSTERRIID },new { @class="btn btn-warning ", onclick="return confirm('Gercekten silmek itiyormusunuz ?')"})</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Musteri Ekle</a>
